@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Makale Durumu Sorgula";
}

<div class="container mt-5">
    <h2 class="text-center">Makale Durumu Sorgula</h2>
    <hr />

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-info text-center">
            @TempData["Message"]
        </div>
    }

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post" action="@Url.Action("Sorgulama", "Makale")">
                <div class="mb-3">
                    <label for="TakipNo" class="form-label">Makale Takip Numarası</label>
                    <input type="text" class="form-control" id="TakipNo" name="TakipNo" required>
                </div>
                <div class="mb-3">
                    <label for="Email" class="form-label">E-posta Adresiniz</label>
                    <input type="email" class="form-control" id="Email" name="Email" required>
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Durumu Sorgula</button>
                </div>
            </form>
        </div>
    </div>
</div>
